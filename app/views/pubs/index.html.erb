<div class="results-container">
    <% @pubs.each do |pub| %>
      <div class="col-xs-12 col-sm-6">
        <%= render pub %>
      </div>
    <% end %>
</div>

<div
  id="map"
  class="search-map"
  data-markers="<%= @markers.to_json %>"
  data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
></div>
